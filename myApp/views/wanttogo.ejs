<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Want-to-Go List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            background-image: url("background3.jpg");
            background-size: cover;
            background-color: #333;
            min-height: 100vh;
        }
        h1 {
            color: white;
            text-align: center;
            margin: 30px 0;
            -webkit-text-stroke: 1px blue;
        }
        .list-group-item {
            font-size: 1.5rem;
            font-weight: bold;
            text-transform: capitalize;
        }
    </style>
</head>
<body>
    
    <nav class="navbar navbar-dark bg-dark mb-4">
        <a class="navbar-brand" href="/home">Want-to-Go List</a>
        <a class="btn btn-outline-light" href="/home">Home</a>
    </nav>

    <div class="container">
        <h1>My Wishlist</h1>

        <% if (typeof destinations !== 'undefined' && destinations.length > 0) { %>
            <div class="list-group">
                <% destinations.forEach(function(item) { %>
                    <a href="/<%= item.view %>" class="list-group-item list-group-item-action list-group-item-light d-flex justify-content-between align-items-center">
                        <%= item.view %> 
                        <span class="badge badge-primary badge-pill">View</span>
                    </a>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-warning text-center">
                <h3>Your list is empty!</h3>
                <a href="/home" class="btn btn-dark mt-2">Go Add Some Places</a>
            </div>
        <% } %>
    </div>

</body>
</html>